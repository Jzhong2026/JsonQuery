<Window x:Class="JmesPathWpfDemo.Views.ArraySortDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configure Array Sort" 
        Width="500" 
        Height="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="400"
        MinHeight="250">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Sort Array By:" 
                   FontWeight="Bold" 
                   FontSize="16"
                   Margin="0,0,0,10"/>

        <ComboBox Grid.Row="1" 
                  x:Name="SortKeyComboBox"
                  Height="35"
                  FontSize="14"
                  Margin="0,0,0,20"/>

        <TextBlock Grid.Row="2" 
                   Text="Sort Direction:" 
                   FontWeight="Bold" 
                   FontSize="16"
                   Margin="0,0,0,10"/>

        <StackPanel Grid.Row="3" Margin="0,0,0,20" VerticalAlignment="Top">
            <RadioButton x:Name="AscendingRadio" 
                         Content="Ascending" 
                         FontSize="14"
                         Margin="0,0,0,10"
                         IsChecked="True"/>
            <RadioButton x:Name="DescendingRadio" 
                         Content="Descending" 
                         FontSize="14"/>
        </StackPanel>

        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="ClearButton"
                    Content="Clear Sort"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="ClearButton_Click"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Height="35"/>
            <Button x:Name="OkButton"
                    Content="OK"
                    Width="90"
                    Margin="0,0,10,0"
                    Click="OkButton_Click"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Height="35"
                    IsDefault="True"/>
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="90"
                    Click="CancelButton_Click"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Height="35"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
