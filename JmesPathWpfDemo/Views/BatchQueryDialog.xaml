<Window x:Class="JmesPathWpfDemo.Views.BatchQueryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://caliburnmicro.com"
        Title="Batch Query on Array" Width="700" Height="550"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Apply query to each item in the array and join results." 
                   TextWrapping="Wrap" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="1" Text="Query for each item:" FontWeight="Bold"/>

        <Grid Grid.Row="2" Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Grid.Column="0" 
                     Text="{Binding QueryTemplate, UpdateSourceTrigger=PropertyChanged}" 
                     Height="60" AcceptsReturn="True" TextWrapping="Wrap"
                     FontFamily="Consolas" Padding="5"/>
            
            <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Top">
                <TextBlock Text="Load Saved Query:" FontSize="10" Margin="0,0,0,2" Foreground="Gray"/>
                <ComboBox ItemsSource="{Binding SavedQueries}"
                          SelectedItem="{Binding SelectedSavedQuery}"
                          DisplayMemberPath="Name"
                          Width="140"
                          Height="25"
                          ToolTip="Select a pre-defined query from Query Store"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5,0,0">
            <TextBlock Text="Join Separator:" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Text="(Use \n for newline)" FontSize="10" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Bottom"/>
        </StackPanel>
        
        <WrapPanel Grid.Row="4" Margin="0,5,0,5">
            <Button Content="Space" Tag=" " Click="AddSeparator_Click" Margin="0,0,5,0" Padding="5,2" MinWidth="50" ToolTip="Add space"/>
            <Button Content="Comma" Tag="," Click="AddSeparator_Click" Margin="0,0,5,0" Padding="5,2" MinWidth="50" ToolTip="Add comma"/>
            <Button Content="Newline" Tag="\n" Click="AddSeparator_Click" Margin="0,0,5,0" Padding="5,2" MinWidth="60" ToolTip="Add \n"/>
            <Button Content="Tab" Tag="\t" Click="AddSeparator_Click" Margin="0,0,5,0" Padding="5,2" MinWidth="40" ToolTip="Add \t"/>
            <Button Content="|" Tag="|" Click="AddSeparator_Click" Margin="0,0,5,0" Padding="5,2" MinWidth="30" ToolTip="Add pipe"/>
            <Button Content="-" Tag="-" Click="AddSeparator_Click" Margin="0,0,5,0" Padding="5,2" MinWidth="30" ToolTip="Add dash"/>
            <Button Content="Clear" Click="ClearSeparator_Click" Margin="5,0,0,0" Padding="5,2" MinWidth="50" Background="#DC3545" Foreground="White" ToolTip="Clear separator"/>
        </WrapPanel>

        <ComboBox Grid.Row="5" Text="{Binding Separator, UpdateSourceTrigger=PropertyChanged}" 
                  x:Name="SeparatorComboBox"
                  IsEditable="True" Margin="0,0,0,15">
            <ComboBoxItem Content="\n" ToolTip="Newline character"/>
            <ComboBoxItem Content=",\n" ToolTip="Comma followed by newline"/>
            <ComboBoxItem Content="\n\n" ToolTip="Two newlines"/>
            <ComboBoxItem Content=", " Tag=", "/>
            <ComboBoxItem Content=" | " Tag=" | "/>
            <ComboBoxItem Content="," Tag=","/>
        </ComboBox>

        <TextBlock Grid.Row="6" Text="Preview JMESPath Query:" FontWeight="Bold"/>
        <TextBox Grid.Row="7" Text="{Binding PreviewQuery, Mode=OneWay}" 
                 IsReadOnly="True" TextWrapping="Wrap"
                 FontFamily="Consolas" Background="#F0F0F0" Padding="5"/>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Apply" IsDefault="True" Width="80" Height="25" Click="OkButton_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" IsCancel="True" Width="80" Height="25" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
