<Window x:Class="JmesPathWpfDemo.Views.DateFormatDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Date Format Conversion" 
        Width="650" 
        Height="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="30"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Configure Date Format Conversion"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Source Format -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Source Format (leave empty to auto-detect):" 
                       FontWeight="SemiBold"
                       FontSize="13"
                       Margin="0,0,0,8"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="SourceFormatTextBox"
                         Grid.Column="0"
                         Height="32"
                         FontSize="13"
                         VerticalContentAlignment="Center"
                         FontFamily="Consolas"
                         ToolTip="e.g., MM/dd/yyyy, yyyy-MM-dd HH:mm:ss"/>
                <Button Grid.Column="1"
                        Content="Clear"
                        Width="60"
                        Style="{StaticResource DangerButtonStyle}"
                        Margin="8,0,0,0"
                        Click="ClearSource_Click"
                        ToolTip="Clear source format"/>
            </Grid>
        </StackPanel>

        <!-- Target Format -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Target Format (leave empty for default yyyy-MM-dd):" 
                       FontWeight="SemiBold"
                       FontSize="13"
                       Margin="0,0,0,8"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="TargetFormatTextBox"
                         Grid.Column="0"
                         Height="32"
                         FontSize="13"
                         VerticalContentAlignment="Center"
                         FontFamily="Consolas"
                         ToolTip="e.g., yyyy-MM-dd, MMMM dd yyyy, MM/dd/yyyy"/>
                <Button Grid.Column="1"
                        Content="Clear"
                        Width="60"
                        Style="{StaticResource DangerButtonStyle}"
                        Margin="8,0,0,0"
                        Click="ClearTarget_Click"
                        ToolTip="Clear target format"/>
            </Grid>
        </StackPanel>

        <!-- Quick Options -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="Quick Target Format Options:" 
                       FontWeight="SemiBold"
                       FontSize="13"
                       Margin="0,0,0,8"/>
            <WrapPanel>
                <Button Content="yyyy-MM-dd" 
                        Width="115"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,0,8,8"
                        Click="QuickFormat_Click"
                        Tag="yyyy-MM-dd"/>
                <Button Content="MM/dd/yyyy" 
                        Width="115"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,0,8,8"
                        Click="QuickFormat_Click"
                        Tag="MM/dd/yyyy"/>
                <Button Content="dd/MM/yyyy" 
                        Width="115"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,0,8,8"
                        Click="QuickFormat_Click"
                        Tag="dd/MM/yyyy"/>
                <Button Content="yyyyMMdd" 
                        Width="115"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,0,8,8"
                        Click="QuickFormat_Click"
                        Tag="yyyyMMdd"/>
                <Button Content="MMMM dd, yyyy" 
                        Width="130"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,0,8,8"
                        Click="QuickFormat_Click"
                        Tag="MMMM dd, yyyy"/>
                <Button Content="yyyy/MM/dd" 
                        Width="115"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,0,8,8"
                        Click="QuickFormat_Click"
                        Tag="yyyy/MM/dd"/>
            </WrapPanel>
        </StackPanel>

        <!-- Spacer -->
        <Grid Grid.Row="4"/>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="OK" 
                    Width="90"
                    Style="{StaticResource SuccessButtonStyle}"
                    Margin="0,0,10,0"
                    IsDefault="True"
                    Click="OkButton_Click"/>
            <Button Content="Cancel" 
                    Width="90"
                    Style="{StaticResource SecondaryButtonStyle}"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
