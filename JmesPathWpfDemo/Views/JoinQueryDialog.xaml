<Window x:Class="JmesPathWpfDemo.Views.JoinQueryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://caliburnmicro.com"
        Title="Generate Join Query" 
        Width="450" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="Height">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Separator:" 
                       FontWeight="Bold" 
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <WrapPanel Margin="0,0,0,5">
                <Button Content="Space" cal:Message.Attach="AddSeparator(' ')" Margin="0,0,5,0" Padding="5,2" MinWidth="40"/>
                <Button Content="Comma" cal:Message.Attach="AddSeparator(',')" Margin="0,0,5,0" Padding="5,2" MinWidth="40"/>
                <Button Content="Newline" cal:Message.Attach="AddSeparator('\n')" Margin="0,0,5,0" Padding="5,2" MinWidth="60" ToolTip="Inserts \n"/>
                <Button Content="Tab" cal:Message.Attach="AddSeparator('\t')" Margin="0,0,5,0" Padding="5,2" MinWidth="30" ToolTip="Inserts \t"/>
                <Button Content="|" cal:Message.Attach="AddSeparator('|')" Margin="0,0,5,0" Padding="5,2" MinWidth="20"/>
                <Button Content="-" cal:Message.Attach="AddSeparator('-')" Margin="0,0,5,0" Padding="5,2" MinWidth="20"/>
            </WrapPanel>
        </StackPanel>

        <TextBox Grid.Row="1" 
                 x:Name="SeparatorTextBox"
                 Height="30"
                 FontSize="12"
                 VerticalContentAlignment="Center"
                 Padding="5,0"
                 Text="{Binding SeparatorText, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,15"/>

        <TextBlock Grid.Row="2" 
                   Text="Property to Join:" 
                   FontWeight="Bold" 
                   FontSize="14"
                   Margin="0,0,0,5"/>

        <ComboBox Grid.Row="3" 
                  x:Name="PropertyComboBox"
                  ItemsSource="{Binding Properties}"
                  SelectedItem="{Binding SelectedProperty}"
                  IsEnabled="{Binding HasProperties}"
                  Height="30"
                  FontSize="12"
                  Margin="0,0,0,15"/>
                  
        <CheckBox Grid.Row="4"
                  x:Name="UsePipelineCheckBox"
                  IsChecked="{Binding UsePipeline}"
                  Content="Use saved query as pipeline"
                  FontSize="12"
                  Margin="0,0,0,10"/>

        <StackPanel Grid.Row="5" Margin="0,0,0,15" IsEnabled="{Binding UsePipeline}">
            <TextBlock Text="Saved Query (Pipeline):" 
                       FontWeight="Bold" 
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <ComboBox x:Name="SavedQueryComboBox"
                      ItemsSource="{Binding SavedQueries}"
                      SelectedItem="{Binding SelectedSavedQuery}"
                      Height="30"
                      FontSize="12"
                      DisplayMemberPath="DisplayText"/>
        </StackPanel>

        <TextBlock Grid.Row="6" 
                   x:Name="PreviewTextBlock"
                   Text="{Binding PreviewText}"
                   TextWrapping="Wrap"
                   Foreground="Gray"
                   FontStyle="Italic"
                   FontSize="12"
                   Margin="0,5,0,10"/>

        <StackPanel Grid.Row="7" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="OkButton"
                    Content="OK"
                    Width="90"
                    Height="30"
                    Margin="0,0,10,0"
                    cal:Message.Attach="OkButton_Click"
                    Background="#0078D4"
                    Foreground="White"
                    FontSize="12"
                    BorderThickness="0"
                    Cursor="Hand"
                    IsDefault="True"/>
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="90"
                    Height="30"
                    cal:Message.Attach="CancelButton_Click"
                    Background="#6C757D"
                    Foreground="White"
                    FontSize="12"
                    BorderThickness="0"
                    Cursor="Hand"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>