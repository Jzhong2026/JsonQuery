<UserControl x:Class="JmesPathWpfDemo.Views.JsonQueryTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cal="http://caliburnmicro.com">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Context Menu for Array Nodes -->
        <ContextMenu x:Key="ArrayNodeContextMenu">
            <MenuItem Header="Create New Tab from This Node" 
                      Click="CreateTabFromNode_Click"
                      Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
            <Separator/>
            <MenuItem Header="Generate todatetime Query" 
                      Click="GenerateToDateTime_Click"
                      Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
            <MenuItem Header="Generate join Query..." 
                      Click="GenerateJoin_Click"
                      Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="IsEnabled" Value="{Binding PlacementTarget.DataContext.IsArray, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    </Style>
                </MenuItem.Style>
            </MenuItem>

            <MenuItem Header="Functions">
                <MenuItem Header="Math (Number)">
                    <MenuItem.Style>
                        <Style TargetType="MenuItem">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding PlacementTarget.DataContext.Type, RelativeSource={RelativeSource AncestorType=ContextMenu}}" Value="Number">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                    <MenuItem Header="abs" Click="GenerateFunction_Click" CommandParameter="abs" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    <MenuItem Header="ceil" Click="GenerateFunction_Click" CommandParameter="ceil" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    <MenuItem Header="floor" Click="GenerateFunction_Click" CommandParameter="floor" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                </MenuItem>
                <MenuItem Header="Aggregates (Array)">
                    <MenuItem.Style>
                        <Style TargetType="MenuItem">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding PlacementTarget.DataContext.IsArray, RelativeSource={RelativeSource AncestorType=ContextMenu}}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                    <MenuItem Header="avg" Click="GenerateFunction_Click" CommandParameter="avg" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    <MenuItem Header="sum" Click="GenerateFunction_Click" CommandParameter="sum" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    <MenuItem Header="min" Click="GenerateFunction_Click" CommandParameter="min" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    <MenuItem Header="max" Click="GenerateFunction_Click" CommandParameter="max" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    <MenuItem Header="length" Click="GenerateFunction_Click" CommandParameter="length" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                </MenuItem>
                <MenuItem Header="Conversion">
                    <MenuItem Header="to_string" Click="GenerateFunction_Click" CommandParameter="to_string" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    <MenuItem Header="to_number" Click="GenerateFunction_Click" CommandParameter="to_number" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                </MenuItem>
                <MenuItem Header="Type Check">
                    <MenuItem Header="type" Click="GenerateFunction_Click" CommandParameter="type" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                </MenuItem>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Configure Array Sort..." 
                      Click="ConfigureSort_Click"
                      Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="IsEnabled" Value="{Binding PlacementTarget.DataContext.IsArray, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    </Style>
                </MenuItem.Style>
            </MenuItem>
            <MenuItem Header="Clear Sort" 
                      Click="ClearSort_Click"
                      Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="IsEnabled" Value="{Binding PlacementTarget.DataContext.HasSortApplied, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    </Style>
                </MenuItem.Style>
            </MenuItem>
        </ContextMenu>

        <!-- TreeView Item Style -->
        <Style x:Key="TreeNodeStyle" TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="ContextMenu" Value="{StaticResource ArrayNodeContextMenu}"/>
            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="TreeViewItem_PreviewMouseLeftButtonDown"/>
        </Style>

        <!-- Selected Node Style -->
        <Style x:Key="NodeContainerStyle" TargetType="Border">
            <Setter Property="Padding" Value="3,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <EventSetter Event="MouseDown" Handler="NodeText_MouseDown"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#FFE699"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsSelected}" Value="True"/>
                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#FFD966"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title and Buttons Section -->
        <Grid Grid.Row="0" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       Text="JSON Input:" 
                       FontWeight="Bold" 
                       FontSize="14"
                       VerticalAlignment="Center"/>
            
            <Button Grid.Column="2"
                    Content="Refresh Tree" 
                    Width="100" 
                    Height="28"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    cal:Message.Attach="RefreshTree">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#28A745"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#218838"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
        
        <TabControl Grid.Row="1" SelectedIndex="{Binding SelectedTabIndex}">
            <!-- Text Input Tab -->
            <TabItem Header="Text Input">
                <TextBox Text="{Binding JsonInput, UpdateSourceTrigger=PropertyChanged}" 
                         AcceptsReturn="True" 
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas" 
                         FontSize="12"
                         Padding="5"
                         Background="#F5F5F5"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"/>
            </TabItem>
            
            <!-- Tree View Tab -->
            <TabItem Header="Tree View">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                               Padding="5"
                               Background="#E0E0E0"
                               TextWrapping="Wrap">
                        <Run Text="Total Nodes: "/>
                        <Run Text="{Binding JsonTreeNodes.Count, Mode=OneWay}" FontWeight="Bold"/>
                        <Run Text="  |  Tip: Right-click any node to create a new tab or configure sorting"/>
                    </TextBlock>
                    <TreeView x:Name="JsonTreeView"
                              ItemsSource="{Binding JsonTreeNodes}" 
                              Background="#F5F5F5"
                              BorderBrush="#CCCCCC"
                              BorderThickness="1">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem" BasedOn="{StaticResource TreeNodeStyle}"/>
                        </TreeView.ItemContainerStyle>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <Border Style="{StaticResource NodeContainerStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Key}" 
                                                   Foreground="#0451A5" 
                                                   FontWeight="SemiBold"
                                                   Visibility="{Binding HasKey, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <TextBlock Text=": " 
                                                   Foreground="Black"
                                                   Visibility="{Binding HasKey, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <TextBlock Text="{Binding ValueText}" 
                                                   Foreground="#333333"/>
                                    </StackPanel>
                                </Border>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </DockPanel>
            </TabItem>
        </TabControl>

        <!-- Query Section -->
        <TextBlock Grid.Row="2" Text="JMESPath Query:" FontWeight="Bold" FontSize="14" Margin="0,10,0,5"/>
        <DockPanel Grid.Row="3" Margin="0,0,0,10">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button Content="Create Tab from Result" 
                        Width="150" 
                        Height="32"
                        Margin="10,0,0,0"
                        Background="#6F42C1"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        cal:Message.Attach="CreateTabFromResult"/>
                        
                <Button Content="Execute" 
                        Width="100" 
                        Height="32"
                        Margin="10,0,0,0"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        cal:Message.Attach="Execute">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#0078D4"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#005A9E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
            <TextBox Text="{Binding Query, UpdateSourceTrigger=PropertyChanged}" 
                     FontFamily="Consolas" 
                     FontSize="12"
                     Padding="5"
                     Height="100"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Background="#F5F5F5"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"/>
        </DockPanel>

        <!-- Result Section -->
        <TextBlock Grid.Row="4" Text="Result:" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
        <TextBox Grid.Row="5" Text="{Binding Result, Mode=OneWay}" 
                 AcceptsReturn="True" 
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas" 
                 FontSize="12"
                 Padding="5"
                 Background="#FAFAFA"
                 BorderBrush="#CCCCCC"
                 BorderThickness="1"/>
    </Grid>
</UserControl>
