<Window x:Class="JmesPathWpfDemo.Views.ShellView"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:cal="http://caliburnmicro.com"
Title="JMESPath Demo" Width="1000" Height="700" WindowState="Maximized">
   <Window.Resources>
       <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- Context Menu for Array Nodes -->
        <ContextMenu x:Key="ArrayNodeContextMenu">
            <MenuItem Header="Generate todatetime Query" 
                      Click="GenerateToDateTime_Click"
                      Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
            <MenuItem Header="Generate join Query" 
                      Click="GenerateJoin_Click"
                      Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="IsEnabled" Value="{Binding PlacementTarget.DataContext.IsArray, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    </Style>
                </MenuItem.Style>
            </MenuItem>

            <MenuItem Header="Combine / Flatten All" 
                      Click="GenerateCombine_Click"
                      Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>

            <MenuItem Header="Functions">
                <MenuItem Header="Math (Number)">
                    <MenuItem.Style>
                        <Style TargetType="MenuItem">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding PlacementTarget.DataContext.Type, RelativeSource={RelativeSource AncestorType=ContextMenu}}" Value="Number">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                    <MenuItem Header="abs" Click="GenerateFunction_Click" CommandParameter="abs" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    <MenuItem Header="ceil" Click="GenerateFunction_Click" CommandParameter="ceil" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    <MenuItem Header="floor" Click="GenerateFunction_Click" CommandParameter="floor" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                </MenuItem>

                <MenuItem Header="Aggregates (Array)">
                    <MenuItem.Style>
                        <Style TargetType="MenuItem">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding PlacementTarget.DataContext.IsArray, RelativeSource={RelativeSource AncestorType=ContextMenu}}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                    <MenuItem Header="avg" Click="GenerateFunction_Click" CommandParameter="avg" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    <MenuItem Header="sum" Click="GenerateFunction_Click" CommandParameter="sum" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    <MenuItem Header="min" Click="GenerateFunction_Click" CommandParameter="min" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    <MenuItem Header="max" Click="GenerateFunction_Click" CommandParameter="max" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    <MenuItem Header="length" Click="GenerateFunction_Click" CommandParameter="length" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                </MenuItem>

                <MenuItem Header="Conversion">
                    <MenuItem Header="to_string" Click="GenerateFunction_Click" CommandParameter="to_string" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    <MenuItem Header="to_number" Click="GenerateFunction_Click" CommandParameter="to_number" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                </MenuItem>

                <MenuItem Header="Type Check">
                    <MenuItem Header="type" Click="GenerateFunction_Click" CommandParameter="type" Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                </MenuItem>
            </MenuItem>
            
            <Separator/>
            <MenuItem Header="Configure Array Sort..." 
                      Click="ConfigureSort_Click"
                      Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="IsEnabled" Value="{Binding PlacementTarget.DataContext.IsArray, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    </Style>
                </MenuItem.Style>
            </MenuItem>
            <MenuItem Header="Clear Sort" 
                      Click="ClearSort_Click"
                      Tag="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="IsEnabled" Value="{Binding PlacementTarget.DataContext.HasSortApplied, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                    </Style>
                </MenuItem.Style>
            </MenuItem>
        </ContextMenu>

        <!-- TreeView Item Style -->
        <Style x:Key="TreeNodeStyle" TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="ContextMenu" Value="{StaticResource ArrayNodeContextMenu}"/>
            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="TreeViewItem_PreviewMouseLeftButtonDown"/>
        </Style>

        <!-- Selected Node Style -->
        <Style x:Key="NodeContainerStyle" TargetType="Border">
            <Setter Property="Padding" Value="3,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <EventSetter Event="MouseDown" Handler="NodeText_MouseDown"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#FFE699"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsSelected}" Value="True"/>
                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#FFD966"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- View Switcher Buttons -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,0,0,15">
            <Button Content="JSON Query" 
                    Width="120" 
                    Height="35"
                    Margin="0,0,5,0"
                    FontSize="14"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    cal:Message.Attach="ShowJsonQuery">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#0078D4"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentView}" Value="JsonQuery">
                                <Setter Property="Background" Value="#005A9E"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button Content="Query Store" 
                    Width="120" 
                    Height="35"
                    Margin="5,0,5,0"
                    FontSize="14"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    cal:Message.Attach="ShowQueryStore">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#0078D4"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentView}" Value="QueryStore">
                                <Setter Property="Background" Value="#005A9E"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Function Reference" 
                    Width="140" 
                    Height="35"
                    Margin="5,0,0,0"
                    FontSize="14"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    cal:Message.Attach="ShowFunctionReference">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#0078D4"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentView}" Value="FunctionReference">
                                <Setter Property="Background" Value="#005A9E"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- JSON Query View -->
        <Grid Grid.Row="1" Grid.RowSpan="6" Visibility="{Binding JsonQueryViewVisibility}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Top Buttons Section -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,0,0,5">
                <Button Content="Complex Query..." 
                        Width="120" 
                        Height="32"
                        Margin="0,0,10,0"
                        Background="#17A2B8"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        cal:Message.Attach="BuildComplexQuery"/>
                <Button Content="Save to Store" 
                        Width="100" 
                        Height="32"
                        Background="#FF8C00"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        cal:Message.Attach="SaveCurrentQuery"/>
            </StackPanel>

            <!-- Tab Control for JSON Query Tabs -->
            <TabControl Grid.Row="1"
                        ItemsSource="{Binding JsonQueryTabs}"
                        SelectedItem="{Binding SelectedJsonQueryTab}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TabTitle}" 
                                       Margin="0,0,5,0"
                                       VerticalAlignment="Center"/>
                            <Button Width="18" 
                                    Height="18"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Padding="0"
                                    Margin="5,0,0,0"
                                    Visibility="{Binding CanClose, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    cal:Message.Attach="[Event Click] = [Action CloseTab($dataContext)]"
                                    ToolTip="Close Tab">
                                <Button.Content>
                                    <TextBlock Text="&#x00D7;" FontSize="14"/>
                                </Button.Content>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFCCCC"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <ContentControl cal:View.Model="{Binding}"/>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </Grid>

        <!-- Query Store View -->
        <Grid Grid.Row="1" Grid.RowSpan="6" Visibility="{Binding QueryStoreViewVisibility}">
            <ContentControl cal:View.Model="{Binding QueryStoreViewModel}"/>
        </Grid>

        <!-- Function Reference View -->
        <Grid Grid.Row="1" Grid.RowSpan="6" Visibility="{Binding FunctionReferenceViewVisibility}">
            <ContentControl cal:View.Model="{Binding FunctionReferenceViewModel}"/>
        </Grid>
    </Grid>
</Window>
