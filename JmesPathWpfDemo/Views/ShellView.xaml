<Window x:Class="JmesPathWpfDemo.Views.ShellView"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:cal="http://caliburnmicro.com"
Title="JMESPath Demo" Width="1000" Height="700" WindowState="Maximized">
   <Window.Resources>
       <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- Context Menu for Array Nodes -->
        <ContextMenu x:Key="ArrayNodeContextMenu"
                     cal:Action.TargetWithoutContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
            <MenuItem Header="Generate todatetime Query" 
                      DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                      cal:Message.Attach="GenerateToDateTimeQuery($dataContext)"/>
            <MenuItem Header="Generate join Query" 
                      DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                      cal:Message.Attach="GenerateJoinQuery($dataContext)">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="IsEnabled" Value="{Binding IsArray}"/>
                    </Style>
                </MenuItem.Style>
            </MenuItem>

            <MenuItem Header="Combine / Flatten All" 
                      DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                      cal:Message.Attach="GenerateCombineQuery($dataContext)"/>

            <MenuItem Header="Functions">
                <MenuItem Header="Math (Number)">
                    <MenuItem.Style>
                        <Style TargetType="MenuItem">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Type}" Value="Number">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                    <MenuItem Header="abs" 
                             DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                             cal:Message.Attach="GenerateFunctionQuery($dataContext, 'abs')"/>
                    <MenuItem Header="ceil" 
                             DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                             cal:Message.Attach="GenerateFunctionQuery($dataContext, 'ceil')"/>
                    <MenuItem Header="floor" 
                             DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                             cal:Message.Attach="GenerateFunctionQuery($dataContext, 'floor')"/>
                </MenuItem>

                <MenuItem Header="Aggregates (Array)">
                    <MenuItem.Style>
                        <Style TargetType="MenuItem">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsArray}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                    <MenuItem Header="avg" 
                             DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                             cal:Message.Attach="GenerateFunctionQuery($dataContext, 'avg')"/>
                    <MenuItem Header="sum" 
                             DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                             cal:Message.Attach="GenerateFunctionQuery($dataContext, 'sum')"/>
                    <MenuItem Header="min" 
                             DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                             cal:Message.Attach="GenerateFunctionQuery($dataContext, 'min')"/>
                    <MenuItem Header="max" 
                             DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                             cal:Message.Attach="GenerateFunctionQuery($dataContext, 'max')"/>
                    <MenuItem Header="length" 
                             DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                             cal:Message.Attach="GenerateFunctionQuery($dataContext, 'length')"/>
                </MenuItem>

                <MenuItem Header="Conversion">
                    <MenuItem Header="to_string" 
                             DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                             cal:Message.Attach="GenerateFunctionQuery($dataContext, 'to_string')"/>
                    <MenuItem Header="to_number" 
                             DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                             cal:Message.Attach="GenerateFunctionQuery($dataContext, 'to_number')"/>
                </MenuItem>

                <MenuItem Header="Type Check">
                    <MenuItem Header="type" 
                             DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                             cal:Message.Attach="GenerateFunctionQuery($dataContext, 'type')"/>
                </MenuItem>
            </MenuItem>
            
            <Separator/>
            <MenuItem Header="Configure Array Sort..." 
                      DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                      cal:Message.Attach="ConfigureArraySort($dataContext)">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="IsEnabled" Value="{Binding IsArray}"/>
                    </Style>
                </MenuItem.Style>
            </MenuItem>
            <MenuItem Header="Clear Sort" 
                      DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                      cal:Message.Attach="ClearArraySort($dataContext)">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="IsEnabled" Value="{Binding HasSortApplied}"/>
                    </Style>
                </MenuItem.Style>
            </MenuItem>
        </ContextMenu>

        <!-- TreeView Item Style -->
        <Style x:Key="TreeNodeStyle" TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="ContextMenu" Value="{StaticResource ArrayNodeContextMenu}"/>
            <!-- Bind Tag to ViewModel so ContextMenu can access it via PlacementTarget.Tag -->
            <Setter Property="Tag" Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}"/>
            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="TreeViewItem_PreviewMouseLeftButtonDown"/>
        </Style>

        <!-- Selected Node Style -->
        <Style x:Key="NodeContainerStyle" TargetType="Border">
            <Setter Property="Padding" Value="3,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="cal:Message.Attach" Value="[Event MouseDown] = [Action OnNodeSelected($dataContext)]"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#FFE699"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsSelected}" Value="True"/>
                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#FFD966"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- View Switcher Buttons -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,0,0,15">
            <Button Content="JSON Query" 
                    Width="120"
                    Margin="0,0,5,0"
                    cal:Message.Attach="ShowJsonQuery">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentView}" Value="JsonQuery">
                                <Setter Property="Background" Value="#005A9E"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button Content="Query Store" 
                    Width="120"
                    Margin="5,0,5,0"
                    cal:Message.Attach="ShowQueryStore">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentView}" Value="QueryStore">
                                <Setter Property="Background" Value="#005A9E"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Function Reference" 
                    Width="140"
                    Margin="5,0,0,0"
                    cal:Message.Attach="ShowFunctionReference">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentView}" Value="FunctionReference">
                                <Setter Property="Background" Value="#005A9E"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- JSON Query View -->
        <Grid Grid.Row="1" Grid.RowSpan="6" Visibility="{Binding JsonQueryViewVisibility}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Top Buttons Section -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,0,0,5">
                <Button Content="Complex Query..." 
                        Width="120"
                        Margin="0,0,10,0"
                        Style="{StaticResource InfoButtonStyle}"
                        cal:Message.Attach="BuildComplexQuery"/>
                <Button Content="Save to Store" 
                        Width="100"
                        Style="{StaticResource WarningButtonStyle}"
                        cal:Message.Attach="SaveCurrentQuery"/>
            </StackPanel>

            <!-- Tab Control for JSON Query Tabs -->
            <TabControl Grid.Row="1"
                        ItemsSource="{Binding JsonQueryTabs}"
                        SelectedItem="{Binding SelectedJsonQueryTab}"
                        Style="{StaticResource ModernTabControlStyle}"
                        Background="#F8F9FA"
                        BorderBrush="#DEE2E6"
                        BorderThickness="0,2,0,0">
                <TabControl.ItemContainerStyle>
                    <Style TargetType="TabItem" BasedOn="{StaticResource QueryTabStyle}"/>
                </TabControl.ItemContainerStyle>
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TabTitle}" 
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <Button Width="18" 
                                    Height="18"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Padding="0"
                                    Margin="5,0,0,0"
                                    Visibility="{Binding CanClose, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    cal:Message.Attach="[Event Click] = [Action CloseTab($dataContext)]"
                                    ToolTip="Close Tab">
                                <Button.Content>
                                    <TextBlock Text="&#x00D7;" FontSize="16" FontFamily="Arial"/>
                                </Button.Content>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Foreground" Value="#6C757D"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                           BorderBrush="{TemplateBinding BorderBrush}"
                                                           BorderThickness="{TemplateBinding BorderThickness}"
                                                           CornerRadius="9"
                                                           Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#DC3545"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <ContentControl cal:View.Model="{Binding}"/>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </Grid>

        <!-- Query Store View -->
        <Grid Grid.Row="1" Grid.RowSpan="6" Visibility="{Binding QueryStoreViewVisibility}">
            <ContentControl cal:View.Model="{Binding QueryStoreViewModel}"/>
        </Grid>

        <!-- Function Reference View -->
        <Grid Grid.Row="1" Grid.RowSpan="6" Visibility="{Binding FunctionReferenceViewVisibility}">
            <ContentControl cal:View.Model="{Binding FunctionReferenceViewModel}"/>
        </Grid>
    </Grid>
</Window>
