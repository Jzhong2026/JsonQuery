<Window x:Class="JmesPathWpfDemo.Views.TimezoneSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Timezones" 
        Width="500" 
        Height="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/> <!-- Spacer -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="From Timezone:" 
                   FontWeight="Bold" 
                   FontSize="14"
                   Margin="0,0,0,5"/>

        <ComboBox Grid.Row="1" 
                  x:Name="FromTimezoneComboBox"
                  Height="30"
                  FontSize="12"
                  Margin="0,0,0,20"/>

        <TextBlock Grid.Row="2" 
                   Text="To Timezone:" 
                   FontWeight="Bold" 
                   FontSize="14"
                   Margin="0,0,0,5"/>

        <ComboBox Grid.Row="3" 
                  x:Name="ToTimezoneComboBox"
                  Height="30"
                  FontSize="12"
                  Margin="0,0,0,10"/>

        <TextBlock Grid.Row="4" 
                   Text="Date Format (Optional):" 
                   FontWeight="Bold" 
                   FontSize="14"
                   Margin="0,0,0,5"/>

        <TextBox Grid.Row="5" 
                 x:Name="DateFormatTextBox"
                 Height="30"
                 FontSize="12"
                 VerticalContentAlignment="Center"
                 Padding="5,0"
                 Margin="0,0,0,10"/>

        <StackPanel Grid.Row="7" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="OkButton"
                    Content="OK"
                    Width="90"
                    Margin="0,0,10,0"
                    Click="OkButton_Click"
                    Style="{StaticResource PrimaryButtonStyle}"
                    IsDefault="True"/>
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="90"
                    Click="CancelButton_Click"
                    Style="{StaticResource SecondaryButtonStyle}"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>